<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General">
        <Preference
            android:key="sync"
            android:title="Sync" />
        <Preference
            android:key="notifications"
            android:title="Notifications" />
        <Preference
            android:key="storage"
            android:title="Storage"
            android:enabled="false"/>
        <SwitchPreference
            android:key="pref_open_links_externally"
            android:title="Links open externally"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Other">
        <Preference
            android:key="clear_data"
            android:title="Clear data"
            android:enabled="false" />
        <Preference
            android:key="log_out"
            android:title="Log out" />
        <Preference
            android:key="about"
            android:title="About &amp; help"
            android:enabled="false" />
    </PreferenceCategory>
</PreferenceScreen>
